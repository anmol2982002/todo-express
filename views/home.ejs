<html>
  <head>
    <title>TODO LIST</title>
    <link rel="stylesheet" href="/assets/css/home.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <div class="title">
      <div class="heading">ToDo List</div>

      <form action="/" method="post">
        <input type="text" placeholder="Title" name="title" required />
        <input type="text" placeholder="Description" name="desc" required />
        <button type="submit">+</button>
      </form>
    </div>

    <div class="main">
      <div class="items">
        <%for(let i of task_list){%>
        <div class="item">
          <div class="title_heading">
            <div><h1 class="tit"><%=i.title%></h1></div>
            <a href="/del_task/?id=<%=i._id%>"><i class="fa fa-trash-o delete_button" style="font-size:26px"></i></a>
          </div>
          <div class="desc"><%=i.description%></div>
        </div>
        <%}%>
      </div>
    </div>
  </body>
</html>
